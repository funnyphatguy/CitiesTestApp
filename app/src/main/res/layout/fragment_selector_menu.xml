<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ic_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/standard_padding"
        android:src="@drawable/ic_arrow_down" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/carousel_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_view_height"
        android:paddingTop="@dimen/standard_padding"
        android:paddingBottom="@dimen/standard_top_margin"
        tools:listitem="@layout/item_city_list_carousel" />

    <TextView
        android:id="@+id/full_list_name_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/standard_padding"
        android:textSize="@dimen/recycler_title_text_size"
        tools:text="@string/full_list_name" />

</LinearLayout>
